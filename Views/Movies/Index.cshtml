@model IEnumerable<Movie>

@{
    ViewData["Title"] = "List of Movies";
}

<style>
    body {
        background: radial-gradient(circle at top, #1a1f2b, #10141d);
        color: #e0e0e0;
        font-family: 'Roboto', sans-serif;
        padding: 20px;
    }

    .movie-card {
        background-color: rgba(0, 0, 0, 0.8);
        border-radius: 10px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.4);
        transition: transform 0.3s, box-shadow 0.3s;
        overflow: hidden;
    }

    .movie-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 12px 30px rgba(0, 0, 0, 0.5);
    }

    .card-header {
        background: linear-gradient(45deg, #ff416c, #ff4b2b);
        color: #fff;
        padding: 10px;
        font-size: 18px;
        font-weight: bold;
    }

    .badge-available {
        background: #28a745;
        color: #fff;
    }

    .badge-expired {
        background: #dc3545;
        color: #fff;
    }

    .badge-upcoming {
        background: #007bff;
        color: #fff;
    }

    .btn-outline-primary {
        border: 2px solid #ffcc00;
        color: #ffcc00;
        padding: 5px 10px;
        transition: all 0.3s;
    }

    .btn-outline-primary:hover {
        background: #ffcc00;
        color: #1a1f2b;
    }

    .btn-success {
        background: linear-gradient(45deg, #ff7e5f, #feb47b);
        color: #fff;
        border: none;
        transition: background 0.3s;
    }

    .btn-success:hover {
        background: linear-gradient(45deg, #fe6b6b, #ff6f61);
    }

    .card-body p {
        margin-bottom: 10px;
    }

    .card-footer {
        background-color: rgba(255, 255, 255, 0.05);
        padding: 10px;
    }

    .card-footer .btn {
        margin-left: 10px;
    }

    img {
        border-radius: 8px;
    }
</style>

<div class="row">
    @foreach (var item in Model)

    {
        <div class="col-md-4 col-sm-6 mb-4">
            <div class="card movie-card">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <span>@item.Name</span>
                        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))

                        {
                            <a class="text-white" asp-action="Edit" asp-route-id="@item.Id" title="Edit">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                        }
                    </div>
                </div>
                <div class="row g-0">
                    <div class="col-md-6">
                        <img src="@item.ImageURL" class="img-fluid w-100" alt="@item.Name">
                    </div>
                    <div class="col-md-6">
                        <div class="card-body">
                            <p>@item.Description</p>
                            <p><b>Cinema:</b> @item.Cinema.Name</p>
                            <p><b>Category:</b> @item.MovieCategory</p>
                            <p><b>Start Date:</b> @item.StartDate.ToString("dd MMM yy")</p>
                            <p><b>End Date:</b> @item.EndDate.ToString("dd MMM yy")</p>
                            <p>
                                <b>Status:</b>
                                @if (DateTime.Now >= item.StartDate && DateTime.Now <= item.EndDate)

                                {
                                    <span class="badge badge-available">AVAILABLE</span>
                                }

                                else if (DateTime.Now > item.EndDate)

                                {
                                    <span class="badge badge-expired">EXPIRED</span>
                                }

                                else

                                {
                                    <span class="badge badge-upcoming">UPCOMING</span>
                                }
                            </p>
                        </div>
                    </div>
                </div>
                <div class="card-footer d-flex justify-content-between">
                    <a class="btn btn-outline-primary" asp-action="Details" asp-route-id="@item.Id">
                        <i class="bi bi-eye-fill"></i> Show Details
                    </a>
                    <a class="btn btn-success @((DateTime.Now > item.EndDate) ? "disabled" : "")"
                       asp-controller="Orders"
                       asp-action="AddItemToShoppingCart"
                       asp-route-id="@item.Id">
                        <i class="bi bi-cart-plus"></i> Add to Cart (Price @item.Price.ToString("c"))
                    </a>
                </div>
            </div>
        </div>
    }
</div>

@if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))

{
    @await Html.PartialAsync("_CreateItem", "Movies")
}
